#!/usr/bin/env ruby

require 'rubygems'

begin
  # Use project's bundle.
  require 'bundler'
  Bundler.setup

  # Use project's environment.
  require 'rake'
  load './Rakefile'
  Rake::Task[:environment].invoke
rescue StandardError => ex
  puts "_________"
  puts "EXCEPTION"
  puts
  puts ex.full_message
  puts
  puts "_________"
end

require 'chusaku/cli'

exit Chusaku::CLI.new.call
